{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2020",
    "lib": ["ES2020", "DOM", "DOM.Iterable"],

    /* Modules */
    "module": "ESNext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "allowImportingTsExtensions": true,

    /* Paths */
    "baseUrl": ".",
    "paths": {
      "@/*": ["./web/*"],
      "@shared/*": ["./assets/web/shared/*"],
      "@windows/*": ["./assets/web/windows/*"],
      // "@components/*": ["./web/shared/components/*"],
      // "@utils/*": ["./web/shared/utils/*"],
      // "@types/*": ["./web/shared/types/*"]
    },

    /* Emit */
    "noEmit": true,
    "sourceMap": true,

    /* Interop Constraints */
    "isolatedModules": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "skipLibCheck": true
  },
  "include": [
    "assets/web/**/*.ts",
    "assets/web/**/*.vue",
    "vite.config.ts"
  ],
  "exclude": [
    "node_modules",
    "assets",
		"dist",
    "target"
  ]
}
